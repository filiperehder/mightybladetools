<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="250dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/armorName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="16sp"
            tools:text="Armadura de Batalha 1111" />

        <ImageView
            android:id="@+id/iconDefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/armorName"
            android:layout_toRightOf="@+id/armorName"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_shield_black_24dp"/>

        <TextView
            android:id="@+id/armorDefense"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/armorName"
            android:layout_toRightOf="@+id/armorName"
            android:textColor="#FFF"
            android:layout_height="30dp"
            android:textSize="14sp"
            tools:text="4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>